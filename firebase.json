{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist/bootcamp-angular",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/products/**",
        "function": "products"
      },
      {
        "source": "/api/shoppingCar/**",
        "function": "shoppingCar"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
